<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_write_board_title"
            android:layout_width="281dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="제목"
            android:textColor="@color/black"
            android:fontFamily="@font/hy"
            android:textSize="20dp"
            android:layout_marginStart="25dp"/>

        <ImageView
            android:id="@+id/btn_write_board_back"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:text="나가기"
            android:textSize="20dp"
            android:src="@drawable/ic_baseline_keyboard_return_24"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <EditText
            android:id="@+id/edt_write_board_content"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:gravity="top"
            android:hint="내용입력"
            android:fontFamily="@font/hy"
            android:layout_margin="15dp"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_registerBoard"
            android:layout_width="366dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:fontFamily="@font/hy"
            android:text="게시글 등록" />

    </LinearLayout>


</LinearLayout>
