<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".member.view.LoginActivity">


    <EditText
        android:id="@+id/findPasswordUser"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginTop="164dp"
        android:ems="10"
        android:hint="아이디"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/findPasswordEmail"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="이메일"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/findPasswordUser"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/findPasswordUser"
        app:layout_constraintTop_toBottomOf="@+id/findPasswordUser" />


    <Button
        android:id="@+id/findPasswordBtn"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/custom_button"
        android:text="찾기"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/findPasswordEmail"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/findPasswordEmail"
        app:layout_constraintTop_toBottomOf="@+id/findPasswordEmail" />

    <Button
        android:id="@+id/findPasswordBack"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_button"
        android:text="돌아가기"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/findPasswordBtn"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="@+id/findPasswordBtn"
        app:layout_constraintTop_toBottomOf="@+id/findPasswordBtn" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="613dp"
        android:layout_height="234dp"
        android:layout_marginBottom="88dp"
        android:src="@drawable/banner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>