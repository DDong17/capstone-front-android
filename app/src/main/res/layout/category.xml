<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종류별 문화정보"
            android:fontFamily="@font/hy"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="2"
        android:rowCount="5">

        <Button
            android:id="@+id/locationContentButton01"
            android:layout_columnWeight="1"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:text="관광지"
            android:layout_margin="7dp"
            android:fontFamily="@font/hy"/>

        <Button
            android:id="@+id/locationContentButton02"
            android:layout_columnWeight="1"
            android:textSize="30dp"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:text="문화시설"
            android:layout_margin="7dp"
            android:fontFamily="@font/hy"/>

        <Button
            android:id="@+id/locationContentButton03"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="20dp"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:text="행사/공연/축제"
            android:layout_margin="7dp"
            android:fontFamily="@font/hy"/>

        <!--
        <Button
            android:id="@+id/locationContentButton04"
            android:layout_columnWeight="1"
            android:textSize="30dp"
            android:text="여행코스"/>
        -->

        <Button
            android:id="@+id/locationContentButton05"
            android:layout_columnWeight="1"
            android:textSize="30dp"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:text="레포츠"
            android:layout_margin="7dp"
            android:fontFamily="@font/hy"/>

        <Button
            android:id="@+id/locationContentButton06"
            android:layout_columnWeight="1"
            android:background="@drawable/custom_button"
            android:text="숙박"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:layout_margin="7dp"
            android:fontFamily="@font/hy"/>

        <Button
            android:id="@+id/locationContentButton07"
            android:layout_row="0"

            android:layout_columnWeight="1"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:text="쇼핑"
            android:textSize="30dp"
            android:layout_margin="7dp"
            android:fontFamily="@font/hy"/>

        <Button
            android:id="@+id/locationContentButton08"
            android:layout_columnWeight="1"
            android:textSize="30dp"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:text="음식점"
            android:layout_margin="7dp"
            android:fontFamily="@font/hy"/>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지역별 문화정보"
            android:fontFamily="@font/hy"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="2"
        android:rowCount="5">

        <Button
            android:id="@+id/locationAreaButton01"
            android:layout_columnWeight="1"
            android:textSize="30dp"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:text="서울"
            android:layout_margin="7dp"
            android:fontFamily="@font/hy"/>

        <Button
            android:id="@+id/locationAreaButton02"
            android:layout_columnWeight="1"
            android:textSize="30dp"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:text="경기"
            android:layout_margin="7dp"
            android:fontFamily="@font/hy"/>

        <Button
            android:id="@+id/locationAreaButton03"
            android:layout_columnWeight="1"
            android:textSize="30dp"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:text="강원"
            android:layout_margin="7dp"
            android:fontFamily="@font/hy"/>

        <Button
            android:id="@+id/locationAreaButton04"
            android:layout_columnWeight="1"
            android:textSize="30dp"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:text="충청북도"
            android:layout_margin="7dp"
            android:fontFamily="@font/hy"/>

        <Button
            android:id="@+id/locationAreaButton05"
            android:layout_columnWeight="1"
            android:textSize="30dp"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:text="충청남도"
            android:layout_margin="7dp"
            android:fontFamily="@font/hy"/>

        <Button
            android:id="@+id/locationAreaButton06"
            android:layout_columnWeight="1"
            android:textSize="30dp"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:text="경상북도"
            android:layout_margin="7dp"
            android:fontFamily="@font/hy"/>

        <Button
            android:id="@+id/locationAreaButton07"
            android:layout_columnWeight="1"
            android:textSize="30dp"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:text="경상남도"
            android:layout_margin="7dp"
            android:fontFamily="@font/hy"/>

        <Button
            android:id="@+id/locationAreaButton08"
            android:layout_columnWeight="1"
            android:textSize="30dp"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:text="전라북도"
            android:layout_margin="7dp"
            android:fontFamily="@font/hy"/>

        <Button
            android:id="@+id/locationAreaButton09"
            android:layout_columnWeight="1"
            android:textSize="30dp"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:text="전라남도"
            android:layout_margin="7dp"
            android:fontFamily="@font/hy"/>

        <Button
            android:id="@+id/locationAreaButton10"
            android:layout_columnWeight="1"
            android:textSize="30dp"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:text="제주"
            android:layout_margin="7dp"
            android:fontFamily="@font/hy"/>
    </GridLayout>

</LinearLayout>